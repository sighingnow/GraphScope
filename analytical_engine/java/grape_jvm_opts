SCRIPT_DIR=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )

if [[ "$GRAPHSCOPE_HOME"x == x ]];
then
    echo "No GRAPHSCOPE_HOME found, using default /opt/graphscope/"
    export GRAPHSCOPE_HOME=/opt/graphscope
fi

if [[ "$SPARK_HOME"x == x ]];
then
    echo "No SPARK_HOME found, using default /home/graphscope/spark/spark-3.2.1-bin-hadoop2.7"
    export GRAPHSCOPE_HOME=/home/graphscope/spark/spark-3.2.1-bin-hadoop2.7
fi

GRAPHX_GRAPE_SDK=/home/graphscope/gs/analytical_engine/java/graphx-on-graphscope/target/graphx-on-graphscope-0.1-shaded.jar
# This env point to the directory where the output for llvm4jni run.sh on Grape-runtime.jar resides
if [[ "${RUNTIME_LLVM4JNI_OUTPUT}"x != x ]];
then
    echo "find env RUNTIME_LLVM4JNI_OUTPUT, append to init java class path"
    class_path=${RUNTIME_LLVM4JNI_OUTPUT}:${GRAPHSCOPE_HOME}/lib/grape-runtime-0.1-shaded.jar:${GRAPHX_GRAPE_SDK}
else 
    class_path=/tmp/fastffi:${GRAPHSCOPE_HOME}/lib/grape-runtime-0.1-shaded.jar:${GRAPHX_GRAPE_SDK}
fi
spark_jars=`cat ${SCRIPT_DIR}/graphx-on-graphscope/cp.txt`
class_path=${class_path}:${spark_jars}

export GRAPE_JVM_OPTS="-Dcom.alibaba.fastffi.rvBuffer=2147483648 -XX:+StartAttachListener -XX:+PreserveFramePointer \
-XX:+UseG1GC \
-XX:+PrintGCDetails -XX:+PrintGCDateStamps \
-XX:+UnlockDiagnosticVMOptions -XX:LoopUnrollLimit=1 -XX:-TieredCompilation \
-XX:CompileCommandFile=${GRAPHSCOPE_HOME}/conf/compile-commands.txt \
-Djava.library.path=${GRAPHSCOPE_HOME}/lib \
-Djava.class.path=${class_path}"
#-XX:+PrintInlining
#-XX:+TraceClassLoading \
#-XX:+UseParallelGC -XX:+UseParallelOldGC 
#-XX:+PrintInlining 
# -XX:+TraceClassLoading \-XX:LoopUnrollLimit=1-XX:+PrintInlining 
#-XX:+PrintInlining \-XX:LoopUnrollLimit=1
#sudo docker run --shm-size 100960m --name graphx -it  --privileged=true --network=host -v /apsara/xiaolei.zl/:/home/graphscope/data registry.cn-hongkong.aliyuncs.com/graphscope/graphscope-vineyard:v0.3.21 /bin/bash
